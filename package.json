{
	"name": "denny-hong",
	"version": "1.0.0",
	"scripts": {
		"dev": "next-remote-watch \"{_pages,_posts}/**/*.md\"",
		"build": "next build",
		"start": "next start",
		"test": "jest --coverage",
		"test:watch": "jest --watch",
		"lint": "eslint . --ignore-path .gitignore --ext .ts,.tsx,.js,.jsx",
		"format": "prettier --write \"**/*.{js,jsx,json,ts,tsx,mdx,css,scss,md}\"",
		"format:check": "prettier --check \"**/*.{js,jsx,json,ts,tsx,mdx,css,scss,md}\"",
		"svg": "svgr -d src/components/icons src/components/icons/svgs",
		"pwa": "npx pwa-asset-generator public/logo.svg public -m public/site.webmanifest --padding 'calc(50vh - 25%) calc(50vw - 25%)' -b 'linear-gradient(135deg, rgba(163, 2, 146,1) 30%, rgba(111, 2, 176,1) 90%)' -q 100 -i public/asset-generator-changes.html --favicon"
	},
	"dependencies": {
		"@mailchimp/mailchimp_marketing": "^3.0.33",
		"classnames": "^2.2.6",
		"feed": "^4.2.2",
		"globby": "^11.0.2",
		"gray-matter": "4.0.2",
		"gsap": "^3.6.0",
		"html-to-react": "^1.4.5",
		"js-yaml": "^3.14.1",
		"next": "^10.2.3",
		"nprogress": "^0.2.0",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"react-syntax-highlighter": "^15.4.3",
		"react-twitter-embed": "^3.0.3",
		"reading-time": "^1.3.0",
		"remark": "13.0.0",
		"remark-html": "13.0.1",
		"sanitize-html": "^2.3.2",
		"striptags": "^3.1.1",
		"styled-components": "^5.2.1",
		"styled-reset": "^4.3.4"
	},
	"devDependencies": {
		"@svgr/cli": "^5.5.0",
		"@testing-library/jest-dom": "^5.11.9",
		"@testing-library/react": "^11.2.5",
		"babel-jest": "^26.6.3",
		"babel-plugin-macros": "^3.0.1",
		"eslint": "^7.20.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-config-standard": "^16.0.2",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^3.3.1",
		"eslint-plugin-promise": "^4.3.1",
		"eslint-plugin-react": "^7.22.0",
		"husky": "^4.3.8",
		"jest": "^26.6.3",
		"lint-staged": "^10.5.4",
		"next-remote-watch": "^1.0.0",
		"prettier": "^2.2.1"
	},
	"lint-staged": {
		"**/*.{json,mdx,css,scss,md}": [
			"prettier --write"
		],
		"**/*.{js,jsx,ts,tsx}": [
			"eslint --fix"
		],
		"*.{ts,tsx,js,jsx}": "eslint --cache --fix"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"license": "MIT",
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
